{%- set name = name|default('Redis Sentinel') -%}

{%- set description = description|default('') -%}

{%- set seed = ['Allenta', 'Redis Sentinel']|join('/') -%}

{%- set master = 'redis_sentinel.stats["{$REDIS_SENTINEL.LOCATIONS}"]' -%}

