{#- MACROS -#}
{#-#########################################################################-#}

{%- macro item_type(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'TRAP': 2,
            'ZABBIX_ACTIVE': 7,
            'CALCULATED': 15,
            'DEPENDENT': 18,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro item_value_type(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'FLOAT': 0,
            'UNSIGNED': 3,
            'TEXT': 4,
            'DEPENDENT': 18,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro trigger_priority(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'WARNING': 2,
            'HIGH': 4,
            'DISASTER': 5,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro trigger_recovery(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'EXPRESSION': 0,
            'RECOVERY_EXPRESSION': 1,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro preprocessing_type(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'BOOL_TO_DECIMAL': 6,
            'CHANGE_PER_SECOND': 10,
            'JSONPATH': 12,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro preprocessing_error_handler(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'ORIGINAL_ERROR': 0,
            'DISCARD_VALUE': 1,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro graph_type(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'NORMAL': 0,
            'STACKED': 1,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro graph_item_drawtype(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'SINGLE_LINE': 0,
            'FILLED_REGION': 1,
            'BOLD_LINE': 2,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro graph_item_yaxisside(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'LEFT': 0,
            'RIGHT': 1,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro graph_item_calc_fnc(name) -%}
    {%- if version in ('4.0', '4.2') -%}
        {{ {
            'MIN': 1,
            'AVG': 2,
        }[name] }}
    {%- else -%}
        {{ name }}
    {%- endif -%}
{%- endmacro -%}

{%- macro trigger(definition) -%}
    {% if version not in ('4.0', '4.2', '4.4', '5.0', '5.2') %}
        <uuid>{{ [seed, definition.id]|join('/')|zuuid }}</uuid>
    {% endif %}
    <expression>{{ definition.expression|e }}</expression>
    <name>{{ definition.name|e }}</name>
    <priority>{{ trigger_priority(definition.priority) }}</priority>
    {% if 'recovery' in definition %}
        <recovery_mode>{{ trigger_recovery('RECOVERY_EXPRESSION') }}</recovery_mode>
        <recovery_expression>{{ definition.recovery|e }}</recovery_expression>
    {% else %}
        <recovery_mode>{{ trigger_recovery('EXPRESSION') }}</recovery_mode>
        <recovery_expression/>
    {% endif %}
    {% if version in ('4.0', '4.2') %}
        <correlation_mode>0</correlation_mode>
        <correlation_tag/>
        <url/>
        <status>0</status>
        <description/>
        <type>0</type>
        <manual_close>0</manual_close>
        <dependencies/>
        <tags/>
    {% endif %}
{%- endmacro -%}

