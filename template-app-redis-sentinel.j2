            {#- MACROS -#}
            {#-#############################################################-#}

            <macros>
                {% for macro in [
                        ('{$REDIS_SENTINEL.LOCATIONS}', ''),

                        ('{$REDIS_SENTINEL.PROCESSES.MIN}', '1'),

                        ('{$REDIS_SENTINEL.LLD_KEEP_LOST_RESOURCES_PERIOD}', '30d'),
